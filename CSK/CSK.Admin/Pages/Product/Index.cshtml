@page
@model CSK.Admin.Pages.Product.IndexModel
@{
}


@section style{
<link rel="stylesheet" href="/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css">

<style>
    .img-product {
        width: 20%;
        text-align: center;
    }

        .img-product img {
            width: 90%;
        }
</style>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Sản phẩm
        &nbsp;&nbsp;&nbsp;&nbsp;
        <a href="/product/create/" class="btn btn-primary">
            Thêm sản phẩm
        </a>
        <a href="../" class="btn btn-link pull-right">
            Trở lại
        </a>
    </h1>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">

            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Danh sách sản phẩm</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="tbl-products" class="table table-bordered table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Tên</th>
                                <th>Mã sản phẩm</th>
                                <th>Danh mục</th>
                                <th>Hình ảnh</th>
                                <th>Sẵn có</th>
                                <th>Hiển thị</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
</section>
<!-- /.content -->
@section script {

<!-- DataTables -->
<script src="/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>

<script>
    pageInit();
    function pageInit() {
        getProducts();
    }

    function initDataTable(products) {
        var table = $('#tbl-products');
        var tbody = $('#tbl-products tbody');
        for (var i = 0; i < products.length; i++) {
            var pro = products[i];

            var cates = $('<td>');
            if (pro.cinfo)
                for (var j = 0; j < pro.cinfo.length; j++) {
                    var cate = pro.cinfo[j];
                    cates.append($('<a href="/category/' + cate.id + '/">').append(cate.name)).append('<br/>');
                }

            var imgEle = $('<td class="img-product">');
            if (pro.image_urls && pro.image_urls.length > 0) {
                var img = pro.image_urls[0];
                imgEle.append($('<img src="' + img + '">'));
            }

            tbody.append(
                $('<tr>').append(
                    $('<td>').append(pro.name)
                ).append(
                    $('<td>').append(pro.code)
                ).append(cates).append(imgEle).append(
                    $('<td>').append(pro.in_stock_amount + ' ' + pro.unit_name)
                ).append(
                    $('<td>').append(pro.is_visible ? 'Có' : 'Không')
                ).append(
                    $('<td>').append(
                        $('<a href="/product/' + pro.id + '/">').append('CHI TIẾT')
                    ).append(' - ').append(
                        $('<a href="#" onclick="deleteProduct(\'' + pro.id + '\')">').append('XÓA')
                    )
                )
            );
        }

        table.DataTable();
    }

    function getProducts() {
        $.ajax({
            url: '/api/products?fields=info&fields=cinfo',
            type: 'get',
            success: (data) => {
                console.log(data);
                initDataTable(data);
            },
            error: (data) => {
                console.log(data);
                data = data.responseJSON;
                Swal.fire({
                    type: 'error',
                    title: 'Message',
                    text: data.message,
                });
            }
        });

    }

    function deleteProduct(id) {
        Swal.fire({
            title: 'Bạn chắc chắn muốn xóa?',
            type: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Chắc chắn',
            cancelButtonText: 'Hủy'
        }).then((result) => {
            if (result.value) {
                $.ajax({
                    url: '/api/products/' + id,
                    type: 'delete',
                    success: (data) => {
                        Swal.fire({
                            type: 'success',
                            title: 'Message',
                            text: 'Xóa thành công',
                        }).then(() => { location.reload(); });
                    },
                    error: (data) => {
                        console.log(data);
                        data = data.responseJSON;
                        Swal.fire({
                            type: 'error',
                            title: 'Message',
                            text: data.message,
                        });
                    }
                });
            }
        });

    }

</script>
}