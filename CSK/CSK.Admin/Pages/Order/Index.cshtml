@page
@model CSK.Admin.Pages.Order.IndexModel
@{

}

@section style{ 
<style>
    .status-new{
        color: blue;
    }

    .status-accepted {
        color:brown;
    }

    .status-cancled {
        color:red;
    }

    .status-finished {
        color: forestgreen;
    }
</style>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Đơn đặt hàng
        <a href="../" class="btn btn-link pull-right">
            Trở lại
        </a>
    </h1>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">

            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">Danh sách đơn đặt hàng</h3>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body table-responsive no-padding">
                            <table id="tbl-orders" class="table table-hover">
                                <tr>
                                    <th>Mã hóa đơn</th>
                                    <th>Khách hàng</th>
                                    <th>Tổng ban đầu (VND)</th>
                                    <th>Tổng cuối cùng (VND)</th>
                                    <th>Thời gian</th>
                                    <th>Tình trạng</th>
                                    <th>Thao tác</th>
                                </tr>
                                
                            </table>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
            </div>
            
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
</section>
<!-- /.content -->
@section script {

<script>
    pageInit();
    function pageInit() {
        getOrders();
    }

    function getOrders() {

        function toStatusElement(status) {
            if (status == 'New')
                return '<td class="status-new">Mới</td>';
            if (status == 'Accepted')
                return '<td class="status-accepted">Đã duyệt</td>';
            if (status == 'Cancled')
                return '<td class="status-cancled">Đã hủy</td>';
            if (status == 'Finished')
                return '<td class="status-finished">Đã hoàn thành</td>';
        }

        function addOrder(ord) {
            var table = $('#tbl-orders');
            table.append(
                $('<tr>').append(
                    $('<td>' + ord.id + '</td>')
                ).append(
                    $('<td>' + ord.customer.name + '</td>')
                ).append(
                    $('<td>' + toMoneyFormat(ord.total_amount.toString()) + '</td>')
                ).append(
                    $('<td>' + toMoneyFormat(ord.final_amount.toString()) + '</td>')
                ).append(
                    $('<td>' + ord.order_time + '</td>')
                ).append(
                    $(toStatusElement(ord.status))
                ).append(
                    $('<td><a href="/order/' + ord.id + '/">CHI TIẾT</a></td>')
                )
            );
        }

        $.ajax({
            url: '/api/sale-orders?fields=info&fields=cinfo',
            type: 'get',
            success: (data) => {
                console.log(data);
                for (var i = 0; i < data.length; i++) {
                    addOrder(data[i]);
                }    
            },
            error: (data) => {
                console.log(data);
                data = data.responseJSON;
                Swal.fire({
                    type: 'error',
                    title: 'Message',
                    text: data.message,
                });
            }
        });

    }

</script>
}