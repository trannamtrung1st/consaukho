    <script>
        pageInit();

        function pageInit() {
            checkLogin();
            $('#btn-signout').click(signOut);
        }

        function checkLogin() {
            if (!localStorage['token'])
                location.replace('/admin/login/');
            else {
                var token = JSON.parse(localStorage['token']);
                var expire = new Date(token.expires_utc);
                if (expire <= new Date()) {
                    localStorage.removeItem('token');
                    location.replace('/admin/login/');
                }
                else {
                    $('.username-text').text(token.username);
                    $('body').show();
                }
            }
        }

        function signOut() {
            localStorage.removeItem('token');
            location.replace('/admin/');
        }

        function toMoneyFormat(str) {
            var count = 0;
            var newStr = "";
            var money, frac;
            if (str.indexOf('.') > -1) {
                money = str.substring(0, str.lastIndexOf('.'));
                frac = str.substring(str.lastIndexOf('.'));
            }
            else {
                money = str;
                frac = '';
            }
            for (var i = money.length - 1; i >= 0; i--) {
                if (count++ == 3) {
                    newStr = ',' + newStr;
                    count = 1;
                }
                newStr = money[i] + newStr;
            }
            return newStr + frac;
        }

    </script>

